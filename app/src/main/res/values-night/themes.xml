<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Batech_1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/anekdevanagari</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#176087</item>
        <item name="colorPrimaryDark">#00527E</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4da167</item>
        <item name="colorSecondaryVariant">#f6ae2d</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#f6ae2d</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">#176087</item>
        <item name="colorControlHighlight">#00527E</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:listPreferredItemHeightSmall">80dp</item>
    </style>

    <style name = "MyNewDialog">
    <item name="android:windowCloseOnTouchOutside">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTitleStyle">@null</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>