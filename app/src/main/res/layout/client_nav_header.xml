<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingLeft="15dp"
    android:background="@color/md_blue_900">

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="production Name"
        android:fontFamily="@font/bubblegum_sans"
        android:layout_marginBottom="10dp"
        android:textColor="@color/md_white_off1"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/menu_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/bubblegum_sans"
        android:textSize="24dp"
        android:textColor="@color/md_white_off1"
        android:layout_above="@id/menu_slogan"
        />
    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/menu_logo"
        android:src="@drawable/menu_menulogo_icon"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="175dp"
        android:src="@mipmap/batech_dark_transparent"/>

</RelativeLayout>