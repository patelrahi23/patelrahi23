<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingStart="15dp"
    android:background="@color/md_white_off1">

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Developed by RAZ"
        android:fontFamily="@font/bubblegum_sans"
        android:layout_marginBottom="10dp"
        android:textColor="@color/custom_black_off"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/menu_logo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Batech"
        android:textSize="24dp"
        android:gravity="start"
        android:foregroundGravity="left"
        android:textColor="@color/custom_black_off"
        android:layout_above="@id/menu_slogan"
        />
    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/menu_logo"
        android:src="@drawable/menu_menulogo_icon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/menu_slogan"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/batech_dark_transparent"/>

</RelativeLayout>